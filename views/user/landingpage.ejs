            </div>
            <div class="category-card">
                <img src="/assets/imgs/products/s23_Ultra-removebg-preview.png" alt="Business Phones">
                <p class="mt-3"><strong>Business Phones</strong></p>
            </div>
            <div class="category-card">
                <img src="/assets/imgs/products/iphone.png" alt="Featured Phones">
                <p class="mt-3"><strong>Featured Phones</strong></p>
            </div>
        </div>
    </div>

    <!-- Featured Products -->
    <section class="product-section">
        <div class="container">
            <h2 class="text-center mb-5">Featured Products</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="product-card">
                        <div class="product-image-container">
                            <img src="\uploads\product-images\optimized-image-1739886173716-2.jpg" alt="iPhone 15 Pro">
                        </div>
                        <div class="product-info">
                            <h5>iPhone 15 Pro</h5>
                            <p class="product-price">₹1,29,999</p>
                            <a href="/user/dashboard/products" class="btn btn-dark px-4">Buy Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="product-card">
                        <div class="product-image-container">
                            <img src="\uploads\product-images\optimized-image-1739886560237-0.jpg" alt="Samsung Galaxy S23 Ultra">
                        </div>
                        <div class="product-info">
                            <h5>Samsung Galaxy S23 Ultra</h5>
