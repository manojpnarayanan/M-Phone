<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            background: linear-gradient(135deg, #667eea, #764ba2);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .card-header {
            font-size: 1.5rem;
            font-weight: bold;
            background: #ffffff;
            border-radius: 15px 15px 0 0;
        }
        .btn-primary {
            background-color: #667eea;
            border: none;
        }
        .btn-primary:hover {
            background-color: #5a67d8;
        }
        .btn-danger {
            background-color: #e53e3e;
            border: none;
        }
        .btn-danger:hover {
            background-color: #c53030;
        }
        .btn-facebook {
            background-color: #3b5998;
            border: none;
        }
        .btn-facebook:hover {
            background-color: #2d4373;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-header text-center">Login</div>
                    <div class="card-body">
                        <form id="loginForm" action="/user/login" method="POST">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" >
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password" >
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                        </form>
                        <hr>
                        <button class="btn btn-danger w-100 mt-2" onclick="location.href='/user/google'">Login with Google</button>
                        <button class="btn btn-facebook w-100 mt-2" onclick="location.href='/auth/facebook'">Login with Facebook</button>
                        <hr>
                        <!-- Changed the forgot password link to use an ID for event handling -->
                        <a href="#" id="forgotPasswordLink" class="d-block text-center">Forgot Password?</a>
                        <a href="/user/signup" class="d-block text-center">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Optional: validate the login form fields before submission
        function validateForm() {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            if (!email || !password) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please fill in all fields!'
                });
                return false;
            }
            return true;
        }

        // Show any error or success messages based on URL parameters
        window.onload = function() {
            const urlParams = new URLSearchParams(window.location.search);
            const error = urlParams.get('error');
            const success = urlParams.get('success');

            if (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Login Failed',
                    text: error
                });
            }

            if (success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: success
                });
            }
        };

        // Forgot Password implementation using SweetAlert modal
        document.getElementById("forgotPasswordLink").addEventListener("click", function(e) {
            e.preventDefault(); // Prevent default link behavior
            Swal.fire({
                title: 'Forgot Password',
                html: `
                    <p>Please enter your email address to reset your password.</p>
                    <input id="fpEmail" class="swal2-input" placeholder="Enter your email">
                `,
                showCancelButton: true,
                confirmButtonText: 'Submit',
                preConfirm: () => {
                    const email = document.getElementById('fpEmail').value;
                    if (!email) {
                        Swal.showValidationMessage('Please enter your email');
                    }
                    // Additional email validation can be added here if needed
                    return { email: email };
                }
            }).then(async (result) => {
                if (result.isConfirmed) {
                    const fpEmail = result.value.email;
                    try {
                        // Send forgot password request to the backend endpoint
                        const fpResponse = await fetch("/user/forgot-password", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ email: fpEmail })
                        });
                        const fpData = await fpResponse.json();
                        console.log("Forgot Password response:", fpData);
                        if (fpResponse.ok) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Email Sent',
                                text: fpData.message || 'A reset link has been sent to your email.',
                                timer: 3000,
                                showConfirmButton: false
                            })
                            .then(()=>window.location.href="/user/reset-password")
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: fpData.message || 'Unable to process your request. Please try again.'
                            });
                        }
                    } catch (error) {
                        console.error("Error during forgot password:", error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Network Error',
                            text: 'Failed to connect to the server. Please try again.'
                        });
                    }
                }
            });
        });
    </script>
</body>
</html>
