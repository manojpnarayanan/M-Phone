<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".toggle-category").forEach(toggle => {
            toggle.addEventListener("change", function () {
                const categoryId = this.dataset.id;
                const isChecked = this.checked;

                fetch(`/admin/dashboard/products/toggle-category/${categoryId}`, { // Added leading "/"
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ listed: isChecked })
                })
                .then(response => {  // Fixed .then() syntax
                    if (!response.ok) {
                        throw new Error("Failed to toggle category");
                    }
                })
                .catch(error => {  // Fixed .catch() syntax
                    console.error("Error:", error);
                });
            });
        });
    });
       document.addEventListener("DOMContentLoaded",function () {

        const searchInput=document.getElementById("categorySearch");
        searchInput.addEventListener("keyup",function () {
            const searchTerm=searchInput.value.trim();
       
         
        fetch(`/admin/dashboard/products/categories?search=${searchTerm}`)
        .then(response=>response.text())
        .then(html=>{
            const parser=new DOMParser();
            const doc=parser.parseFromString(html,"text/html");
            const newTableBody=doc.querySelector("tbody");
                if(newTableBody){
            document.querySelector("tbody").innerHTML=newTableBody.innerHTML
                }
        })
        .catch(error=>console.log(error))
    })


       })







</script>





