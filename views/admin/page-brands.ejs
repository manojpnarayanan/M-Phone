<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Brand Management | Evara Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/theme/favicon.svg">
    <link href="/assets/css/main.css" rel="stylesheet" type="text/css" />
    <style>
        .brand-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            border-radius: 8px;
            overflow: hidden;
            padding: 15px;
        }
        .brand-image {
            height: 80px;
            width: 80px;
            object-fit: contain;
        }
        .brand-title {
            margin-top: 10px;
            font-size: 1rem;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="screen-overlay"></div>
    <%- include('./partials/nav') %>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
               
            </div>
        </header>

        <section class="content-main">
            <div class="content-header d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="content-title">Brand Management</h2>
                    <p>Manage all your brands and vendors here.</p>
                </div>
                <form class="searchform">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search brands..."id="searchbrand">
                        <!-- <button class="btn btn-light bg" type="submit"> <i class="material-icons md-search"></i></button> -->
                    </div>
                </form>
                <a href="/admin/dashboard/brands/addbrands" class="btn btn-primary">Add New Brand</a>
            </div>

            <div class="row g-3">
                <% if (brand && Array.isArray(brand) && brand.length > 0) { %>
                    <% brand.forEach(brand => { %>
                        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                            <div class="card border-1 shadow-sm brand-card">
                                <div class="card-header bg-white">
                                    <img src="/<%= brand.image %>" class="brand-image" alt="<%= brand.name %> Logo">
                                </div>
                                <div class="card-body">
                                    <h6 class="brand-title"><%= brand.name %></h6>
                                    <!-- <a href="#" class="text-primary">View Products</a> -->
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-12 text-center">
                        <p class="text-muted">No brands available. Add a new brand above.</p>
                    </div>
                <% } %>
            </div>
        </section>
        <div class="pagination-area mt-30 mb-50">
            <nav aria-label="Page navigation">
              <ul class="pagination justify-content-center">
                <% if (currentPage > 1) { %>
                  <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search ? encodeURIComponent(search) : '' %>">Previous</a>
                </li>
                <% } %>
        
                <% for (let i = 1; i <= totalPages; i++) { %>
                  <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&search=<%= encodeURIComponent(search) %>"><%= i %></a>
                  </li>
                <% } %>
        
                <% if (currentPage < totalPages) { %>
                  <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= encodeURIComponent(search) %>">Next</a>
                  </li>
                <% } %>
              </ul>
            </nav>
        </div>
        
          

        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> Â© Evara Dashboard.
                </div>
                <div class="col-sm-6 text-sm-end">All rights reserved</div>
            </div>
        </footer>

        <script src="/assets/js/vendors/jquery-3.6.0.min.js"></script>
        <script src="/assets/js/vendors/bootstrap.bundle.min.js"></script>
        <script src="/assets/js/vendors/select2.min.js"></script>
        <script src="/assets/js/vendors/perfect-scrollbar.js"></script>
        <script src="/assets/js/vendors/jquery.fullscreen.min.js"></script>
        <script src="/assets/js/vendors/chart.js"></script>
        <script src="/assets/js/main.js" type="text/javascript"></script>
        <script src="/assets/js/custom-chart.js" type="text/javascript"></script>
    </main>





    <script>
       document.addEventListener("DOMContentLoaded",function(){
        const searchInput=document.getElementById("searchbrand")
         searchInput.addEventListener("keyup",function(){
            const searchTerm=searchInput.value.trim()


            fetch(`/admin/dashboard/brands/?search=${encodeURIComponent(searchTerm)}`)
            .then(response=>response.text())
            .then(html=>{
                const parser=new DOMParser();
                const doc=parser.parseFromString(html,"text/html")
                const newTableBody=doc.querySelector(".row.g-3")
                const newPagination = doc.querySelector(".pagination-area");
                if(newTableBody){
                    document.querySelector(".row.g-3").innerHTML=newTableBody.innerHTML
                }
                if(newPagination){
                document.querySelector(".pagination-area").innerHTML = newPagination.innerHTML;
            }
            })
            .catch(error=>{
                console.log(error)
            })

        })
       })
    </script>


  
   
    </body>
</html>
